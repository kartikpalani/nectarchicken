<h1>Invoice</h1>

<%= form_for(@product) do |f| %>
    <input type="hidden" name="type" value="sell">
    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>Quantity in Stock= <%= @product.quantity%></p>
    <div class="field">
      <%= f.label :sell_quantity %><br>
      <%= f.text_field :sell_quantity %>
    </div>
    <p>Sell Price= <%= @product.sellprice%></p>
    <div class="field">
      <%= f.label :amt_sold %><br>
      <%= f.text_field :amt_sold %>
    </div>
    <div class="field">
      <%= f.label :amt_loaned %><br>
      <%= f.text_field :amt_loaned %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>