<header class="intro">
  <div class="intro-body">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">

          <h1>Payroll</h1>

          <table class = 'table'>
            <thead>
            <tr>
              <th>Date</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Amount Paid</th>
              <th>Withholding</th>
              <th>Salary</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @employees.each do |employee| %>
                <tr>
                  <td><%= employee.pay_date%></td>
                  <td><%= employee.firstname %></td>
                  <td><%= employee.lastname %></td>
                  <td><%= 0.75 * employee.salary %></td>
                  <td><%= 0.25 * employee.salary %></td>
                  <td><%= employee.salary %></td>
                </tr>
            <% end %>
            </tbody>


          </table>

          <br>
        </div>
      </div>
    </div>
  </div>
</header>


